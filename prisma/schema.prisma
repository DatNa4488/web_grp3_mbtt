model Listing {
  id          String   @id @default(cuid())
  title       String?   // Make optional or map from name
  name        String   // Main display name
  description String?
  price       Float
  area        Float
  address     String?
  city        String?
  province    String?
  district    String
  ward        String?
  
  // Location
  lat         Float?
  lon         Float?
  
  // Property Details
  type        String   @default("hcm_rental")
  images      String[] // Array of image URLs
  frontage    Float?
  floors      Int?
  views       Int      @default(0)

  // AI Analysis Data
  ai_suggestedPrice Float?
  ai_potentialScore Int?
  ai_riskLevel      String?
  ai_priceLabel     String?
  
  // Owner Info (Snapshot or Manual Entry)
  ownerName   String?
  ownerPhone  String?
  ownerRole   String?  @default("Owner")
  
  // Relations
  landlordId  String?
  landlord    User?    @relation(fields: [landlordId], references: [id])
  
  favoritedBy Favorite[]
  reviews     Review[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5 stars
  comment   String
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
}
